<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="peak.campingbuddy2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/campingbuddyicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/campingbuddyicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait" />
        <activity android:name=".SplashScreenActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".firepage" android:screenOrientation="portrait"/>
        <activity android:name=".foodpage" android:screenOrientation="portrait"/>
        <activity android:name=".tentpage" android:screenOrientation="portrait"/>
        <activity android:name=".tentex" android:screenOrientation="portrait"/>
        <activity android:name=".fireex" android:screenOrientation="portrait"/>
        <activity android:name=".foodex" android:screenOrientation="portrait"/>
        <activity android:name=".waterex" android:screenOrientation="portrait"/>
        <activity android:name=".fruitex" android:screenOrientation="portrait"/>
        <activity android:name=".meatex" android:screenOrientation="portrait"></activity>
    </application>

</manifest>